<div class="htmx-animate flex flex-1 flex-col gap-y-4 mx-8 ">
    {% if exam_records is not empty %}
    {% for record in exam_records %}
    <div class="flex flex-1">
        <details class="details-animated w-full bg-white rounded-xl shadow-sm ring-1 ring-gray-950/5">
            <summary class="flex flex-1 p-4 bg-white rounded-xl justify-between hover:bg-blue-900 group duration-300">
                <span class="flex gap-x-1 items-center">
                    {% if record.status == "pass" %}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="oklch(72.3% 0.219 149.579)" class="size-7">
                        <path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
                        </svg>
                    {% elseif record.status == "perfect_score" %}
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFD700" class="size-7">
                        <path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
                        </svg>    
                    {% endif %}
                    <p class="text-blue-900 text-xl font-bold group-hover:text-white">                    
                        Record #{{ record.attempt }}
                    </p>
                    <span class="text-xs text-slate-600 font-semibold group-hover:text-gray-400"> Total Score : {{ record.total_score }}pts</span>
                </span>
                <a      href="{{ route('exam_records.show', { exam: exam, exam_record: record}) }}"
                        hx-get="{{ route('exam_records.show', { exam: exam, exam_record: record}) }}"
                        hx-indicator="#spinner"
                        hx-target="body"
                        hx-push-url=true
                        class="cursor-pointer text-blue-900 text-xl font-bold group-hover:text-white">
                    See full report
                </a>
            </summary>
            
                <div class="flex flex-1 flex-col prose max-w-none gap-y-4 border-t-1 border-gray-950/5">
                    <div class="px-4 rounded-2xl text-gray-800">            
                        <table>
                            <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Total Score</th>
                                <th>Scores Obtained</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for subject in record.subjects %}
                                <tr>
                                    <td>{{ subject.subject_name }}</td>
                                    <td>{{ subject.score }}</td>
                                    <td>{{ subject.score_obtained }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            
        </details>
    </div>
    {% endfor %}
    {% else %}
    <div class="flex flex-1">
        <details class="flex flex-1 flex-col bg-white rounded-xl shadow-sm ring-1 ring-gray-950/5">
            <summary class="flex flex-1 p-4 bg-white rounded-xl justify-between hover:bg-blue-900 group duration-300">
                <span class="text-blue-900 text-xl font-bold group-hover:text-white">No Exam Records
                </span>
            </summary>
        </details>
    </div>
    {% endif %}
    <div id="spinner"
        class="htmx-indicator fixed flex gap-x-4 w-full h-full items-center justify-center bg-white z-50 opacity-0 pointer-events-none transition-opacity duration-300 ease-in">
            <div class="w-16 h-16 rounded-full bg-blue-900 animate-bounce [animation-delay:.1s]"></div>
            <div class="w-16 h-16 rounded-full bg-blue-900 animate-bounce [animation-delay:.2s]"></div>
            <div class="w-16 h-16 rounded-full bg-blue-900 animate-bounce [animation-delay:.3s]"></div>
    </div>
</div>

