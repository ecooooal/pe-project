<script>
    function bindCheckboxListeners(container = document) {
        const addButtons = container.querySelectorAll('#add-questions-button');
        addButtons.forEach(button => {
            const form = button.closest('form') || container;
            const checkboxes = form.querySelectorAll('input[name="toggle-questions[]"]');

            function updateButton() {
                const anyChecked = [...checkboxes].some(cb => cb.checked);
                button.disabled = !anyChecked;
            }

            checkboxes.forEach(cb => {
                cb.removeEventListener('change', updateButton);
                cb.addEventListener('change', updateButton);
            });

            updateButton();
        });

        const removeButtons = container.querySelectorAll('#remove-questions-button');
        removeButtons.forEach(button => {
            const form = button.closest('form') || container;
            const checkboxes = form.querySelectorAll('input[name="toggle-questions[]"]');

            function updateButton() {
                const anyChecked = [...checkboxes].some(cb => cb.checked);
                button.disabled = !anyChecked;
            }

            checkboxes.forEach(cb => {
                cb.removeEventListener('change', updateButton);
                cb.addEventListener('change', updateButton);
            });

            updateButton();
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        bindCheckboxListeners();
    });

    document.body.addEventListener('htmx:afterSwap', (evt) => {
        bindCheckboxListeners(evt.target);
    });



    let lastClickedButton = null;
    let row = null;
    document.addEventListener('DOMContentLoaded', () => {
        let openDetailsState = [];

        document.body.addEventListener('htmx:beforeRequest', (evt) => {
            openDetailsState = Array.from(document.querySelectorAll('details[open]')).map(details => details.id);
        });

        document.body.addEventListener('htmx:afterSwap', (evt) => {
            if (openDetailsState.length > 0) {
                openDetailsState.forEach(id => {
                    const detailsElement = document.getElementById(id);
                    if (detailsElement) {
                        detailsElement.setAttribute('open', '');
                        detailsElement.classList.add('bg-blue-900');
                    }
                });
                // Clear the state after re-applying it
                openDetailsState = [];
            }
        });
    });
</script>
