                    </svg>
                    <span>
                        {{ current_academic_year ? current_academic_year.start_date|date('M d Y') }}
                    </span>
                </p>
                <p class="flex gap-x-1 items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5 text-orange-600">
                    <path fill-rule="evenodd" d="M3 4.25A2.25 2.25 0 0 1 5.25 2h5.5A2.25 2.25 0 0 1 13 4.25v2a.75.75 0 0 1-1.5 0v-2a.75.75 0 0 0-.75-.75h-5.5a.75.75 0 0 0-.75.75v11.5c0 .414.336.75.75.75h5.5a.75.75 0 0 0 .75-.75v-2a.75.75 0 0 1 1.5 0v2A2.25 2.25 0 0 1 10.75 18h-5.5A2.25 2.25 0 0 1 3 15.75V4.25Z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M19 10a.75.75 0 0 0-.75-.75H8.704l1.048-.943a.75.75 0 1 0-1.004-1.114l-2.5 2.25a.75.75 0 0 0 0 1.114l2.5 2.25a.75.75 0 1 0 1.004-1.114l-1.048-.943h9.546A.75.75 0 0 0 19 10Z" clip-rule="evenodd" />
                    </svg>
                    <span>                    
                        {{ current_academic_year ? current_academic_year.end_date|date('M d Y') }}
                    </span>
                </p>
            </div>
        </div>
        <div id="pagination-div" class="w-full max-w-[70%] ml-4" >
            <div class="flex w-full p-4 bg-white border-x border-t border-gray-300 rounded-t-2xl">
                <button type="button" 
                        hx-get="{{ route('admin.academic-year.create') }}"
                        hx-trigger="click"
                        hx-target="#academic-year-form"
                        hx-swap="outerHTML"
                        popovertarget="create-academic-year-popover"
                        class=" ml-auto flex gap-1 bg-blue-900 text-gray-200 hover:bg-blue-600 hover:text-white duration-300 rounded-lg p-2 font-semibold"
                        >

                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 9a.75.75 0 0 0-1.5 0v2.25H9a.75.75 0 0 0 0 1.5h2.25V15a.75.75 0 0 0 1.5 0v-2.25H15a.75.75 0 0 0 0-1.5h-2.25V9Z" clip-rule="evenodd" />
                    </svg> 
                    Academic Year
                </button>
            </div>
            <div class="overflow-auto max-w-full scroll-smooth border-x border-t border-gray-300">
                {{ academic_table(header, rows, url:url) }}

            </div>
            <div class="w-full h-16 p-8 bg-white border-x border-b border-gray-300 rounded-b-2xl">
            </div>
        </div>
    </div>

</div>
<div popover="manual"
    class="backdrop:bg-gray-900/25 m-auto rounded-xl w-96" 
    id="create-academic-year-popover"
    >
    <form id="academic-year-form"></form>
</div>

{% endblock %}