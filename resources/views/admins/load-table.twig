{% from 'components/core/show-header' import show_header %}
{% from 'components/core/show-item' import show_item %}
{% from 'components/core/index-table' import table %}

<div class="flex flex-1 mx-8">
    <h1 class="text-2xl self-center font-bold">{{ url|capitalize }}</h1>
    {% if can('create ' ~ url) %}
        <button 
                class=" ml-auto bg-blue-900 text-gray-200 hover:bg-blue-600 hover:text-white duration-300 rounded-lg p-2 font-semibold"
                hx-get="/admins/{{ url }}/create"
                hx-swap="innerHTML transition:true" 
                hx-target="#access-control-content">
                Add {{ url|capitalize }}
        </button>
    {% endif %}
</div>

<div class="mx-4 p-4" >
    <div class="flex justify-end items-center w-full h-16 p-8 bg-white border-x border-t border-gray-300 rounded-t-2xl">
        <h1>Filter here</h1>
    </div>
    <div class="overflow-auto max-w-full scroll-smooth border-x border-t border-gray-300">
        {{ table(header, rows, url:url, forAdmin:true, openAction:false) }}

    </div>
    <div class="flex justify-end items-center w-full h-16 p-8 bg-white border-x border-b border-gray-300 rounded-b-2xl">
    </div>   
</div>
