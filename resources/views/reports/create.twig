{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/show-header' import show_header %}
{% import 'components/core/forms' as forms %}

 <form 
        hx-post="{{ route('reports.store', { exam:exam }) }}" 
        hx-target="this"
        hx-indicator="#loader"
        hx-disabled-elt="#create-report-button, #close-report-popover"
        class="flex flex-col gap-y-2 p-4 mb-2 max-h-4/5 overflow-auto">
    {{ csrf_field() }}
    <div class="flex max-w-full rounded-xl bg-white ">
        <div class="flex flex-col p-4 gap-4 flex-1">  
            {{ show_header('Create Report for ' ~ exam.name) }}
            <div class="flex gap-x-4 justify-between w-full">
                <div class="flex items-center min-h-20 w-40 p-4 border-gray-100 border-1 rounded-lg shadow-md gap-2">
                    <div class="flex pb-2 font-mono items-center justify-center w-8 h-8 text-blue-900 text-2xl font-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-9">
                        <path d="M11.7 2.805a.75.75 0 0 1 .6 0A60.65 60.65 0 0 1 22.83 8.72a.75.75 0 0 1-.231 1.337 49.948 49.948 0 0 0-9.902 3.912l-.003.002c-.114.06-.227.119-.34.18a.75.75 0 0 1-.707 0A50.88 50.88 0 0 0 7.5 12.173v-.224c0-.131.067-.248.172-.311a54.615 54.615 0 0 1 4.653-2.52.75.75 0 0 0-.65-1.352 56.123 56.123 0 0 0-4.78 2.589 1.858 1.858 0 0 0-.859 1.228 49.803 49.803 0 0 0-4.634-1.527.75.75 0 0 1-.231-1.337A60.653 60.653 0 0 1 11.7 2.805Z" />
                        <path d="M13.06 15.473a48.45 48.45 0 0 1 7.666-3.282c.134 1.414.22 2.843.255 4.284a.75.75 0 0 1-.46.711 47.87 47.87 0 0 0-8.105 4.342.75.75 0 0 1-.832 0 47.87 47.87 0 0 0-8.104-4.342.75.75 0 0 1-.461-.71c.035-1.442.121-2.87.255-4.286.921.304 1.83.634 2.726.99v1.27a1.5 1.5 0 0 0-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.66a6.727 6.727 0 0 0 .551-1.607 1.5 1.5 0 0 0 .14-2.67v-.645a48.549 48.549 0 0 1 3.44 1.667 2.25 2.25 0 0 0 2.12 0Z" />
                        <path d="M4.462 19.462c.42-.419.753-.89 1-1.395.453.214.902.435 1.347.662a6.742 6.742 0 0 1-1.286 1.794.75.75 0 0 1-1.06-1.06Z" />
                        </svg>                                
                    </div>
                    
                    <div class="flex flex-col justify-center">
                        <div class="flex flex-wrap min-w-24 gap-1">
                            <span class="text-xl font-extrabold font-mono text-blue-900">
                                {{ exam.courses.count }}
                            </span>
                        </div>
                        <span class="text-xs text-blue-900/80 font-mono font-semibold tracking-wide">
                        {{ exam.courses.count > 1 ? 'Courses' : 'Course' }}
                        </span>
                    </div>
                </div>
                <div class="flex items-center min-h-20 w-40 p-4 border-gray-100 border-1 rounded-lg shadow-md gap-2">
                    <div class="flex pb-2 font-mono items-center justify-center w-8 h-8 text-blue-900 text-2xl font-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-9">
                            <path d="M11.25 4.533A9.707 9.707 0 0 0 6 3a9.735 9.735 0 0 0-3.25.555.75.75 0 0 0-.5.707v14.25a.75.75 0 0 0 1 .707A8.237 8.237 0 0 1 6 18.75c1.995 0 3.823.707 5.25 1.886V4.533ZM12.75 20.636A8.214 8.214 0 0 1 18 18.75c.966 0 1.89.166 2.75.47a.75.75 0 0 0 1-.708V4.262a.75.75 0 0 0-.5-.707A9.735 9.735 0 0 0 18 3a9.707 9.707 0 0 0-5.25 1.533v16.103Z" />
                        </svg>                             
                    </div>
                    
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-extrabold font-mono text-blue-900">
                            {{ subjects }}
                        </span>
                        <span class="text-xs text-blue-900/80 font-mono font-semibold tracking-wide">
                            Subjects
                        </span>
                    </div>
                </div>
                <div class="flex items-center min-h-20 w-40 p-4 border-gray-100 border-1 rounded-lg shadow-md gap-2">
                    <div class="flex pb-2 font-mono items-center justify-center w-8 h-8 text-blue-900 text-2xl font-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-9">
                            <path d="M19.906 9c.382 0 .749.057 1.094.162V9a3 3 0 0 0-3-3h-3.879a.75.75 0 0 1-.53-.22L11.47 3.66A2.25 2.25 0 0 0 9.879 3H6a3 3 0 0 0-3 3v3.162A3.756 3.756 0 0 1 4.094 9h15.812ZM4.094 10.5a2.25 2.25 0 0 0-2.227 2.568l.857 6A2.25 2.25 0 0 0 4.951 21H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-2.227-2.568H4.094Z" />
                        </svg>                          
                    </div>
                    
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-extrabold font-mono text-blue-900">
                            {{ topics }}
                        </span>
                        <span class="text-xs text-blue-900/80 font-mono font-semibold tracking-wide">
                            Topics
                        </span>
                    </div>
                </div>
                <div class="flex items-center min-h-20 w-40 p-4 border-gray-100 border-1 rounded-lg shadow-md gap-2">
                    <div class="flex pb-2 font-mono items-center justify-center w-8 h-8 text-blue-900 text-2xl font-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-9">
                        <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
                        </svg>                      
                    </div>
                    
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-extrabold font-mono text-blue-900">
                            {{ students }}
                        </span>
                        <span class="text-xs text-blue-900/80 font-mono font-semibold tracking-wide">
                            Students
                        </span>
                    </div>
                </div>
                <div class="flex items-center min-h-20 w-40 p-4 border-gray-100 border-1 rounded-lg shadow-md gap-2">
                    <div class="flex pb-2 font-mono items-center justify-center w-8 h-8 text-blue-900 text-2xl font-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-9">
                        <path fill-rule="evenodd" d="M4.125 3C3.089 3 2.25 3.84 2.25 4.875V18a3 3 0 0 0 3 3h15a3 3 0 0 1-3-3V4.875C17.25 3.839 16.41 3 15.375 3H4.125ZM12 9.75a.75.75 0 0 0 0 1.5h1.5a.75.75 0 0 0 0-1.5H12Zm-.75-2.25a.75.75 0 0 1 .75-.75h1.5a.75.75 0 0 1 0 1.5H12a.75.75 0 0 1-.75-.75ZM6 12.75a.75.75 0 0 0 0 1.5h7.5a.75.75 0 0 0 0-1.5H6Zm-.75 3.75a.75.75 0 0 1 .75-.75h7.5a.75.75 0 0 1 0 1.5H6a.75.75 0 0 1-.75-.75ZM6 6.75a.75.75 0 0 0-.75.75v3c0 .414.336.75.75.75h3a.75.75 0 0 0 .75-.75v-3A.75.75 0 0 0 9 6.75H6Z" clip-rule="evenodd" />
                        <path d="M18.75 6.75h1.875c.621 0 1.125.504 1.125 1.125V18a1.5 1.5 0 0 1-3 0V6.75Z" />
                        </svg>                    
                    </div>
                    
                    <div class="flex flex-col justify-center">
                        <span class="text-xl font-extrabold font-mono text-blue-900">
                            {{ takers }}
                        </span>
                        <span class="text-xs text-blue-900/80 font-mono font-semibold tracking-wide">
                            Takers
                        </span>
                    </div>
                </div>
            </div>
            <div class="flex flex-col w-full bg-orange-50 rounded-lg p-4 text-gray-800 gap-1">
                <h1 class="text-lg font-bold">Assumptions:</h1>
                <p class="text-sm font-semibold">
                    • Only Students' Latest Attempt will be put into reports. <br>
                    • Reports are snapshots of the Exam status on that date.
                </p>
            </div>
        </div>  
    </div>

    <div class="flex justify-between gap-x-2 px-4">
        <button id="create-report-button" 
                {% if takers < 1 %}
                type="button" 
                disabled
                {% else %}
                type="submit" 
                {% endif %}
                class="cursor-pointer bg-blue-900 text-gray-200 hover:bg-blue-600 hover:text-white disabled:opacity-50 disabled:cursor-not-allowed duration-300 rounded-lg px-2 py-1 font-semibold text-sm">{{ takers > 0 ? 'Create Report' : 'This Exam currently has no Takers' }}</button>
        <div id="loader" class="htmx-indicator transition-opacity duration-500 opacity-0 pointer-events-none">
            <img class="mr-10" width="50" src="{{ asset('images/bars-scale.svg') }}"/>
        </div>
        <button id="close-report-popover" type="button" popovertarget="create-report-popover" popovertargetaction="hide" class="disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer bg-white border-1 border-gray-600 text-gray-900 hover:bg-red-500 hover:border-white hover:text-white duration-300 rounded-lg p-2 font-semibold">Close</button>
    </div>
</form>