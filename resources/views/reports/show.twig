                        </div>
                    </div>
                </div>
                
            </div>
            <div  class="flex flex-col w-full">
                <p class="text-3xl font-bold text-gray-800">Exploratory Data Analysis</p>
                <div class="flex flex-col gap-2 p-1">
                    <div class="flex gap-4">
                        <div id="exam-histogram" class="w-full"></div>
                        <div id="exam-boxplot" class="w-full"></div>
                    </div>
                    <div class="flex gap-4 w-full">
                        <div id="exam-subjects" class="w-full"></div>
                        <div id="exam-topics" class="w-full"></div>
                    </div>
                    <div class="w-full">
                        <div id="exam-compare-group" class="w-full"></div>
                    </div>
                    <div class="w-full">
                        <div id="exam-type-group-normalize" class="w-full"></div>
                    </div>
                    <div class="flex justify-center w-full">
                        <div id="exam-heatstrip"></div>
                    </div>
                    <div class="flex justify-center w-full">
                        <div id="exam-answer-time-heatstrip"></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="reports_courses_data" data-courses="{{ courses|json_encode() }}" class="hidden"></div>
        <div id="reports_questions_data" data-questions="{{ questions_count }}" class="hidden"></div>
        <div id="reports_students_data" data-students="{{ students_count }}" class="hidden"></div>
        <div id="reports_max_score_range_data" data-max-score-range="{{ max_score_range }}" class="hidden"></div>

        <div id="reports_exam_histogram_boxplot_data" data-exam-scores="{{ exam_histogram_boxplot_data|json_encode() }}" class="hidden"></div>
        <div id="reports_normalized_exam_scores_by_subjects_data" data-subject-scores="{{ normalized_exam_scores_by_subjects_data|json_encode() }}" class="hidden"></div>
        <div id="reports_normalized_exam_scores_by_topics_data" data-topic-scores="{{ normalized_exam_scores_by_topics_data|json_encode() }}" class="hidden"></div>        
        <div id="reports_exam_question_heatstrip_data" data-level-scores="{{ exam_question_heatstrip_data|json_encode() }}" class="hidden"></div>
        <div id="reports_type_with_level_scores_data" data-type-scores="{{ exam_compare_types_and_blooms_data|json_encode() }}" class="hidden"></div>
</div>
<div popover ="manual"
    class="backdrop:bg-gray-900/15 backdrop:backdrop-blur-[1px] m-auto p-8 rounded-xl w-fit" 
    id="destroy-report-popover"
    >
    <div class="flex flex-col gap-y-4">
        {{ show_header('Delete Report') }}
        <div class="flex flex-1 flex-col">
            <div class="flex flex-col gap-y-4">
                <div class="flex gap-x-32 justify-between w-full">
                    <h1>Are you sure to delete this Report?</h1>
                </div>
                <form   method="POST" 
                        hx-delete="{{ route('reports.destroy', { 'exam':exam, 'report':report } ) }}"
                        hx-trigger="click[#delete-report-button]"
                        id="delete-form">
                    {{ csrf_field() }}
                    {{ method_field('DELETE') }}
                    <button id="delete-report-button" type="submit" class="cursor-pointer bg-red-600 text-gray-200 hover:bg-red-500 hover:text-white duration-300 rounded-lg p-2 font-semibold">Delete</button>
                    <button type="button" popovertarget="destroy-report-popover" popovertargetaction="hide" class="disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer bg-white border-1 border-gray-600 text-gray-900 hover:bg-red-500 hover:border-white hover:text-white duration-300 rounded-lg p-2 font-semibold">Close</button>
                </form>    
            </div>
        </div>
    </div>
</div>

